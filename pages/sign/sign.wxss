.top-tab{
  width: 750rpx;
  height: 100rpx;
  align-content: center;
  background: #fff;
  color: #000;
  font-size: 40rpx;
  line-height: 100rpx;
  background: #e8e8e8;
  /* box-shadow: 0 2px 2px #bebebe; */
  text-align: center;
  border-bottom: 1px solid #ccc;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.top{
    width: 750rpx;
    
    border-bottom: 1px solid #ccc;
   }
.stars{
  display: inline-flex;
  flex-direction: row;
  width: 80%;
  padding: 0 10%;
}
/**
 *  群头像样式
 */
.circle{
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border: 1px solid #ccc;
  border-radius: 60rpx;
  font-size: 50rpx;
  line-height: 50rpx;
  text-align: left;
  padding: 0;
}
/**
 * 未分享的群样式
 */
 .uncirclr{
   background: url('https://www.chbcar.com/public/img/logo.png') no-repeat 100%; 
 }
.time{
    margin-top: 40rpx;
    text-align: center;
    height: 40rpx;
}
/**签到按钮*/
.sign-btn{
  margin-top:40rpx;
  margin-bottom: 40rpx;
  width: 135rpx;
  height: 135rpx;
    border-radius: 130rpx;
  padding-top:24rpx;
  font-weight: bold;
  font-size: 36rpx;
  vertical-align: center;
}
.invalid{
  border:1px dotted #ccc;
  background: #E5717a;
}
.valid{
  border: 1px solid #ccc;
  background: #E5717a;
}
.finish{
  border: 1px solid #0ff;
}
.bottom{
  width: 100%;
  position: fixed;
  bottom: 100rpx;
  
}
.status{
  margin:0 10%;
  margin-top:10rpx;
  font-size: 26rpx;
}
.task-tip{
  font-size: 26rpx;
  margin-left: 40rpx;
  color:#ccc;
}
.task-view{
  display: flex;
  flex-direction: row;
  margin: 0 5%;
  margin-top: 40rpx;
  background: #e8e8e8;
  padding: 0 16px;
}
.task{
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 40rpx;
  width: 150rpx;
  height: 200rpx;
  font-size: 25rpx;
  border: 1rpx solid #ccc;
  background: #FF3030;
}
.title{
    height: 40rpx;
    text-align: center;
    border-bottom: 1px solid #000;
}
.checkBtn{
    width: 110rpx;
    height: 36rpx;
    font-size: 25rpx;
    line-height: 35rpx;
    border-radius: 20 rpx;
    position:relative;
    bottom: -110rpx;
    
}
.footer{
  position: fixed;
  bottom:0;
  height: 100rpx;
  width: 100%;
  line-height: 30rpx;
  font-size: 30rpx;
  align-content: center;
  padding-top:30rpx;
  text-align: center;
  /* background: #f00; */
  border-top:1px solid #ccc;
}

/** 弹窗 **/
.check-box{
  width: 350rpx; 
 overflow: hidden; 
 position: fixed; 
 top: 45%; 
 left: 0; 
 z-index: 1001; 
 background: #FAFAFA; 
 margin: -150rpx 200rpx 0 200rpx; 
 border-radius: 3px;
}
.box-title{
 padding:15rpx; 
 font-size: 24rpx;
 text-align: center;
}
.box-content{
  height: 150rpx;
  font-size: 24rpx;
  text-align: center;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
/*mask*/
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #000; 
 opacity: 0.5; 
 overflow: hidden; 
}