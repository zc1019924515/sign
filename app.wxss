/**app.wxss**/
.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
/**漂浮按钮样式**/
.btn-top{
  position: absolute;
  right: 0rpx;
  background: RGBA(251, 118, 83, 0.5);
  height: 55rpx;
  width: 149rpx;
  color: #fff;
  font-size: 23rpx;
  border-bottom-left-radius: 25rpx;
  border-top-left-radius: 25rpx;
  border-bottom-right-radius: 0rpx;
  border-top-right-radius: 0rpx;
  margin-top:20rpx; 
}
/**默认按钮**/
.btn-default{
  width: 500rpx;
  height: 100rpx;
  vertical-align: center;
  border-radius: 50rpx;
}